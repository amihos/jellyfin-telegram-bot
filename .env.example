# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Jellyfin Server Configuration
JELLYFIN_SERVER_URL=http://your-jellyfin-server:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# Webhook Configuration
WEBHOOK_SECRET=optional_webhook_secret_for_security
PORT=8080

# Database Configuration
DATABASE_PATH=./bot.db

# Logging Configuration (optional)
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log

# Testing Configuration (optional)
# Enable beta features for testing (true/false)
ENABLE_BETA_FEATURES=false
# Comma-separated list of Telegram chat IDs that can access beta features
# Example: TESTER_CHAT_IDS=123456789,987654321
TESTER_CHAT_IDS=
